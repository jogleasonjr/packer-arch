{
    "builders": [
        {
            "type": "vmware-iso",
            "guest_os_type": "other4xlinux-64",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "output_directory": "output/{{user `vm_name`}}",
            "vm_name": "{{user `vm_name`}}",
            "disk_size": "{{user `disk_size`}}",
            "skip_compaction": "true",
            "headless": "{{user `headless`}}",
            "sound": "true",
            "http_directory": "http",
            "boot_wait": "{{user `boot_wait`}}",
            "boot_command": [
                "<enter><wait10><wait10><wait10><wait10>",
                "curl -O 'http://{{.HTTPIP}}:{{.HTTPPort}}/install{,-chroot}.sh'<enter><wait>",
                "bash install.sh < install-chroot.sh && systemctl reboot<enter>"
            ],
            "ssh_timeout": "{{user `ssh_timeout`}}",
            "ssh_username": "dev",
            "ssh_password": "piranha",
            "shutdown_command": "sudo systemctl poweroff",
            "vmx_data": {
                "memsize": "{{user `memory`}}",
                "numvcpus": "{{user `cpus`}}"
            }
        },
        {
            "type": "virtualbox-iso",
            "boot_wait": "{{user `boot_wait`}}",
            "http_directory": "http",
            "disk_size": "{{user `disk_size`}}",
            "guest_os_type": "ArchLinux_64",
            "output_directory": "output/{{user `vm_name`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_url": "{{user `iso_url`}}",
            "ssh_username": "dev",
            "ssh_password": "piranha",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "sudo systemctl poweroff",
            "guest_additions_mode": "disable",
            "headless": "false",
            "sound": "true",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "{{user `memory`}}"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "{{user `cpus`}}"
                ]
            ],
            "boot_command": [
                "<enter><wait10><wait10><wait10><wait10><wait10><enter><enter>",
                "curl -O 'http://{{.HTTPIP}}:{{.HTTPPort}}/install{,-chroot}.sh'<enter><wait>",
                "bash install.sh < install-chroot.sh && systemctl reboot<enter>"
            ]
        },
        {
            "type": "qemu",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "output_directory": "output/{{user `vm_name`}}",
            "headless": "true",
            "disk_size": "{{user `disk_size`}}",
            "format": "qcow2",
            "accelerator": "kvm",
            "http_directory": "http",
            "net_device": "virtio-net",
            "disk_interface": "virtio",
            "boot_wait": "{{user `boot_wait`}}",
            "boot_command": [
                "<enter><wait10><wait10><wait10><wait10>",
                "curl -O 'http://{{.HTTPIP}}:{{.HTTPPort}}/install{,-chroot}.sh'<enter><wait>",
                "bash install.sh < install-chroot.sh && systemctl reboot<enter>"
            ],
            "ssh_timeout": "{{user `ssh_timeout`}}",
            "ssh_username": "dev",
            "ssh_password": "piranha",
            "shutdown_command": "sudo systemctl poweroff",
            "qemuargs": [
                [
                    "-m",
                    "{{ user `memory` }}"
                ],
                [
                    "-smp",
                    "cpus={{ user `cpus`}}"
                ]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "content",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/tools.sh",
                "scripts/desktop.sh"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "chmod +x ~/.scripts/*"
            ]
        },
        {
            "type": "shell",
            "only": ["vmware-iso"],
            "scripts": [
                "scripts/vmware.sh"
            ]
        },
        {
            "type": "shell",
            "only": ["virtualbox-iso"],
            "scripts": [
                "scripts/virtualbox.sh"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/toys.sh",
                "scripts/audio.sh",
                "scripts/docker.sh",
                "scripts/dotnet.sh",
                "scripts/cleanup.sh"
            ]
        }
    ],
    "variables": {
        "cpus": "2",
        "disk_size": "40000",
        "headless": "false",
        "memory": "4096",
        "iso_url": "http://mirrors.edge.kernel.org/archlinux/iso/2019.01.01/archlinux-2019.01.01-x86_64.iso",
        "iso_checksum": "494d2ca93841870d42412ffba47dd114db034924",
        "iso_checksum_type": "sha1",
        "ssh_timeout": "60m",
        "boot_wait": "10s",
        "vm_name": "archlinux-x86_64-packer-{{timestamp}}"
    }
}