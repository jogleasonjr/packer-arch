{
    "builders": [
        {
            "type": "vmware-iso",
            "guest_os_type": "other4xlinux-64",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "output_directory": "output/{{user `vm_name`}}",
            "vm_name": "{{user `vm_name`}}",
            "disk_size": "{{user `disk_size`}}",
            "skip_compaction": "true",
            "headless": "{{user `headless`}}",
            "http_directory": "http",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait10><wait10><wait10>",
                "curl -O 'http://{{.HTTPIP}}:{{.HTTPPort}}/install{,-chroot}.sh'<enter><wait>",
                "bash install.sh < install-chroot.sh && systemctl reboot<enter>"
            ],
            "ssh_timeout": "{{user `ssh_timeout`}}",
            "ssh_username": "dev",
            "ssh_password": "piranha",
            "shutdown_command": "sudo systemctl poweroff",
            "vmx_data": {
                "memsize": "{{user `memory`}}",
                "numvcpus": "{{user `cpus`}}"
            }
        },
        {
            "type": "qemu",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "output_directory": "output/{{user `vm_name`}}",
            "headless": "yes",
            "disk_size": "{{user `disk_size`}}",
            "format": "qcow2",
            "accelerator": "kvm",
            "http_directory": "path/to/httpdir",
            "net_device": "virtio-net",
            "disk_interface": "virtio",
            "boot_wait": "10s",
            "boot_command": [
                "<enter><wait10><wait10><wait10><wait10>",
                "curl -O 'http://{{.HTTPIP}}:{{.HTTPPort}}/install{,-chroot}.sh'<enter><wait>",
                "bash install.sh < install-chroot.sh && systemctl reboot<enter>"
            ],
            "ssh_timeout": "{{user `ssh_timeout`}}",
            "ssh_username": "dev",
            "ssh_password": "piranha",
            "shutdown_command": "sudo systemctl poweroff",
            "qemuargs": [
                [ "-m", "{{ user `memory` }}" ],
                [ "-smp", "cpus={{ user `cpus`}}"]
              ]
          }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/tools.sh",
                "scripts/vmware.sh",
                "scripts/i3.sh"
            ]
        }
    ],
    "variables": {
        "cpus": "2",
        "disk_size": "40000",
        "headless": "false",
        "memory": "512",
        "iso_url": "http://mirrors.edge.kernel.org/archlinux/iso/2019.01.01/archlinux-2019.01.01-x86_64.iso",
        "iso_checksum": "494d2ca93841870d42412ffba47dd114db034924",
        "iso_checksum_type": "sha1",
        "ssh_timeout": "60m",
        "vm_name": "archlinux-x86_64-packer-{{timestamp}}"
    }
}